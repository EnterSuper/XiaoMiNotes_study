<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/color_picker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/format_color_picker_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/color_red"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#FF0000"
            android:contentDescription="Red" />

        <Button
            android:id="@+id/color_blue"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#0000FF"
            android:contentDescription="Blue" />

        <Button
            android:id="@+id/color_green"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#00FF00"
            android:contentDescription="Green" />

        <Button
            android:id="@+id/color_yellow"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#FFFF00"
            android:contentDescription="Yellow" />

        <Button
            android:id="@+id/color_purple"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#800080"
            android:contentDescription="Purple" />

        <Button
            android:id="@+id/color_orange"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#FFA500"
            android:contentDescription="Orange" />

        <Button
            android:id="@+id/color_pink"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#FFC0CB"
            android:contentDescription="Pink" />

        <Button
            android:id="@+id/color_gray"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#808080"
            android:contentDescription="Gray" />

        <Button
            android:id="@+id/color_cyan"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#00FFFF"
            android:contentDescription="Cyan" />

        <Button
            android:id="@+id/color_brown"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#A52A2A"
            android:contentDescription="Brown" />

        <Button
            android:id="@+id/color_black"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#000000"
            android:contentDescription="Black" />

        <Button
            android:id="@+id/color_white"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:contentDescription="White"
            android:foreground="@android:drawable/divider_horizontal_dark" />
    </GridLayout>
</LinearLayout> 